
<%= link_to "Back to cocktails", cocktails_path %>
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('/home/travisbenge/Downloads/sergio-alves-santos-26588-unsplash.jpg');">
  <div class="banner-content">
    <h2><%= @cocktail.name %></h2>

    <h3><%= link_to "Add ingredients", new_cocktail_dose_path(@cocktail) %></h3>

    <% @cocktail.doses.each do |dose| %>
      <%= dose.ingredient.name %>, <%= dose.description %>
      <br>
    <% end %>
    <br>
  </div>
</div>
